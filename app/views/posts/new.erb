<div class="row">
  <div class="col-md-6 col-md-offset-3 main-div">
    <h1>Post a Song</h1>
    <hr/>

    <% if session['errors'] && session['errors'].errors.any? %>
      <div>
        <strong>Some issues with your post, please fix them:</strong>
        <ul>
          <% session['errors'].errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <% session['errors'] = nil %>
    <div>
      <form method="post" action="/posts">
        <div class="form-group">
          <label>Title:</label>
          <input type="text" class="form-control" name="title" placeholder="Song Title" autofocus="autofocus" value="<%= session['post_title'] %>" />
        </div>
        <div class="form-group">
          <label>Author:</label>
          <input type="text" class="form-control" name="author" placeholder="Song Author" value="<%= session['post_author'] %>" />
        </div>
        <div class="form-group">
          <label>URL:</label>
          <input type="text" class="form-control" name="url" placeholder="Optional" value="<%= session['post_url'] %>" />
        </div>
        <input type="hidden" name="user_id" value="<%= current_user.id %>" />
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
    <hr/>
  </div>
</div>