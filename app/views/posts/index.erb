<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Music Wall</h1>
      <hr/>

      <% @posts.each do |post| %>
        <div class="row">
          <p class="indexList col-md-10">
            <%= post.votes.count %> | 
            <a href="/posts/<%= post.id %>"><%= post.title %></a>
            by: <%= post.author %>
            <% unless post.url == "" %>
              <span class="urlLink">(<a href="<%= post.url %>">URL</a>)</span>
            <% end %>
          </p>
          <% unless post.votes.find_by(user_id: current_user.id) %>
            <form method="post" action="/vote" class="col-md-2">
              <input type="hidden" name="post_id" value="<%= post.id %>">
              <input type="hidden" name="user_id" value="<%= current_user.id %>">
              <button type="submit" class="btn btn-default">Vote</button>
            </form>
          <% end %>
        </div>
      <hr/>
      <% end %>
      <a href="/posts/new" class="btn btn-default">Post a song!</a>
    </div>
  </div>
</div>