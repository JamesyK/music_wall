<div class="row">
  <div class="col-md-6 col-md-offset-3 main-div">
    <hr/>
    <h3><%= @post.title %>, <%= @post.author %></h3>
    <h4>
      <% unless @post.url == "" %>
        <a href="<%= @post.url %>"><%= @post.url.truncate(50) %></a>
      <% end %>
    </h4>
    <p class="timestamp">
      By: <%= User.find_by(id: @post.id).username %><br>
      On: <%= @post.created_at %>
    </p>
    <hr/>

    <% unless  @post.reviews.find_by(user_id: current_user.id) %>
      <div class="row">
        <form method="post" action="/review" class="col-md-8">
          <div class="form-group">
            <label>Review:</label>
            <input type="hidden" name="post_id" value="<%= @post.id %>">
            <input type="hidden" name="user_id" value="<%= current_user.id %>">
            <textarea rows="3" cols="50" class="form-control" name="comment"></textarea>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
      <hr/>
    <% end %>

    <% if @post.reviews.empty? %>
      <p>Be the first to post a review</p>
      <hr/>
    <% else %>
      <h4>Reviews:</h4>
      <hr/>
    <% end %>

    <% @post.reviews.order('reviews.id DESC').each do |review| %>
      <div class="row">
        <div class="col-md-10">
          <p class="review-size">
            <%= review.comment %>
          </p>
          <p class="timestamp">
            By: <%= User.find_by(id: review.user_id).username %><br>
            On: <%= review.created_at %>
          </p>
        </div>
          <% if review.user_id == current_user.id %>
            <form method="post" action="/review/delete" class="col-md-2">
              <input type="hidden" name="review" value="<%= review.id %>">
              <button type="submit" class="btn btn-default">Delete</button>
            </form>
          <% end %>
      </div>
    <hr/>
    <% end %>
  </div>
</div>