<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <hr/>
    <h3><%= @post.title %>, <%= @post.author%></h3>
    <p>
      <% unless @post.url == "" %>
        <a href="<%= @post.url %>"><%= @post.url %></a>
      <% end %>
    </p>
    <p>
      Posted on: <%= @post.created_at %>
    </p>
    <hr/>

    <a href="/posts" class="btn btn-default">Back to the Music Wall</a>
  </div>
</div>