<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <h1>Sign Up</h1>
    <hr/>

    <% if @user.errors.any? %>
      <div>
        <strong>Some issues with your sign up, please fix them:</strong>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <form method="post" action="/signup">
        <div class="form-group">
          <label>Username:</label>
          <input type="text" class="form-control" name="username" placeholder="Minimum 4 characters" value="<%= @user.username %>">
        </div>
        <div class="form-group">
          <label>Email:</label>
          <input type="text" class="form-control" name="email" placeholder="Must be valid" value="<%= @user.email %>">
        </div>
        <div class="form-group">
          <label>Password:</label>
          <input type="password" class="form-control" name="password" placeholder="Minimum 6 characters" value="<%= @user.password %>">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
    <hr/>
  </div>
</div>